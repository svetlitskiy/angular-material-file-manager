{
  "defaultSeverity": "error",
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "codelyzer"
  ],
  "rules": {
    "no-console": {
      "severity": "error"
    },
    "encoding": {
      "severity": "error"
    },
    "indent": {
      "severity": "error",
      "options": ["spaces", 4]
    },
    "linebreak-style": {
      "severity": "error",
      "options": ["LF"]
    },
    "eofline": {
      "severity": "error"
    },
    "quotemark": {
      "severity": "error",
      "options": ["single", "jsx-double"]
    },
    "typedef": {
      "severity": "warning",
      "options": ["call-signature", "parameter", "arrow-parameter", "property-declaration", "variable-declaration",
        "member-variable-declaration", "object-destructuring", "array-destructuring"
      ]
    },
    "curly": {
      "severity": "error"
    },
    "interface-name": {
      "severity": "error",
      "options": ["always-prefix"]
    },
    "class-name": {
      "severity": "error"
    },
    "space-before-function-paren": {
      "severity": "error",
      "options": [{
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "never",
        "method": "never",
        "constructor": "never"
      }]
    },
    "switch-final-break": {
      "severity": "error",
      "options": ["always"]
    },
    "unnecessary-else": {
      "severity": "warning",
      "options": [{
        "allow-else-if": true
      }]
    },
    "variable-name": {
      "severity": "error",
      "options": ["check-format", "allow-pascal-case"]
    },
    "prefer-const": {
      "severity": "error",
      "options": [{
        "destructuring": "any"
      }]
    },
    "new-parens": {
      "severity": "error"
    },
    "no-any": {
      "severity": "warning"
    },
    "semicolon": {
      "severity": "error",
      "options": ["always"]
    },
    "whitespace": {
      "severity": "error",
      "options": ["check-branch", "check-decl", "check-operator", "check-module", "check-separator",
        "check-rest-spread", "check-type", "check-typecast", "check-type-operator", "check-preblock"
      ]
    },
    "member-access": {
        "severity": "error",
        "options": ["check-constructor", "check-parameter-property"]
    },
    "ordered-imports": {
      "severity": "error",
      "options": [{
        "named-imports-order": "lowercase-first",
        "import-sources-order": "lowercase-first",
        "grouped-imports": true,
        "groups": [{
          "name": "angular core modules",
          "match": "^@angular",
          "order": 1
        },
          {
            "name": "rxjs",
            "match": "^rxjs",
            "order": 10
          },
          {
            "name": "environments",
            "match": "^@environments",
            "order": 61
          },
          {
            "name": "local",
            "match": "^(../|./)",
            "order": 70
          },
          {
            "name": "other @",
            "match": "^@",
            "order": 50
          },
          {
            "name": "other",
            "match": ".*",
            "order": 50
          }
        ]
      }]
    },
    "angular-whitespace": {
      "severity": "error",
      "options": ["check-interpolation", "check-pipe", "check-semicolon"]
    },
    "component-max-inline-declarations": true,
    "component-selector": [
      true,
      "element",
      ["mat", "app"],
      "kebab-case"
    ],
    "contextual-lifecycle": true,
    "directive-class-suffix": true,
    "directive-selector": [
      true,
      "attribute",
      ["mat", "app"],
      "camelCase"
    ],
    "no-attribute-decorator": true,
    "no-conflicting-lifecycle": true,
    "no-forward-ref": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-lifecycle-call": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "no-pipe-impure": true,
    "no-queries-metadata-property": true,
    "no-unused-css": true,
    "prefer-inline-decorator": true,
    "prefer-output-readonly": true,
    "template-banana-in-box": true,
    "template-conditional-complexity": [
      true,
      4
    ],
    "template-cyclomatic-complexity": [
      true,
      5
    ],
    "template-i18n": [
      true,
      "check-id"
    ],
    "template-no-negated-async": true,
    "template-use-track-by-function": true,
    "use-component-selector": true,
    "use-component-view-encapsulation": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true
  },
  "linterOptions": {
    "exclude": [
    ]
  }
}
